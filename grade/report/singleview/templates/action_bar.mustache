{{!
    @template gradereport_singleview/action_bar
}}
<div class="container-fluid tertiary-navigation full-width-bottom-border">
    <div class="row">
        {{#generalnavselector}}
            <div class="navitem">
                {{>core/tertiary_navigation_selector}}
            </div>
            <div class="navitem-divider"></div>
        {{/generalnavselector}}
        {{#groupselector}}
            <div class="navitem">
                {{{.}}}
            </div>
            <div class="navitem-divider"></div>
        {{/groupselector}}
        {{#itemselector}}
            <div class="navitem">
                {{{.}}}
            </div>
            <div class="navitem-divider"></div>
        {{/itemselector}}
        {{#pagetoggler}}
            <div class="d-flex ml-auto">
                {{#bulkactions}}
                        <div class="navitem-divider"></div>
                        <div class="navitem">{{{bulkactions}}}</div>
                        {{#js}}
                            require(['gradereport_singleview/bulkactions'], function(bulkactions) {
                            bulkactions.init();
                            });
                        {{/js}}
                {{/bulkactions}}
                <div class="navitem-divider"></div>
                <div class="navitem">
                    {{>gradereport_singleview/page_toggler}}
                </div>
            </div>
        {{/pagetoggler}}
    </div>
</div>
